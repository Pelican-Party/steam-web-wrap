{
	"name": "steam-web-wrap",
	"version": "0.0.1",
	"description": "Easily turn your web games into native apps for publishing on Steam.",
	"main": "src/main.js",
	"scripts": {
		"start": "electron-forge start -- --url=https://steam-web-wrap-demo.deno.dev/ --no-fullscreen --show-debug-menu --debug-dev",
		"fmt": "prettier . --write",
		"make": "electron-forge make",
		"make-linux": "electron-forge make -p linux -a x64",
		"make-windows": "electron-forge make -p win32 -a x64"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Pelican-Party/steam-web-wrap.git"
	},
	"author": "Pelican Party Studios",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Pelican-Party/steam-web-wrap/issues"
	},
	"homepage": "https://github.com/Pelican-Party/steam-web-wrap#readme",
	"devDependencies": {
		"@electron-forge/cli": "7.6.0",
		"@electron-forge/maker-zip": "7.6.0",
		"electron": "33.2.1",
		"prettier": "3.4.1"
	}
}
